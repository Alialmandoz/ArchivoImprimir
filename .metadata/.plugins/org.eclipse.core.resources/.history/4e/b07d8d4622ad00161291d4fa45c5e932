package gestion.Ui;

import java.awt.BorderLayout;
import java.util.ArrayList;
import java.util.List;

import javax.swing.JFrame;
import javax.swing.JScrollPane;
import javax.swing.JTable;
import javax.swing.table.DefaultTableModel;
import javax.swing.table.TableModel;

import archivoImprimir.gestion.pojo.Cliente;
import gestion.dao.ClienteDao;

public class ModeloCliente extends JFrame {
    private static final long serialVersionUID = 1L;


        ModeloCliente testJFrame = new ModeloCliente();

        List<String> columns = new ArrayList<String>();
        List<String[]> values = new ArrayList<String[]>();
        columns.add("id");
        columns.add("nombre");
        columns.add("apellido");
        columns.add("Mail");
        columns.add("telefono");
        
        ClienteDao cliente = new ClienteDao();
        
        List<Cliente> clientes = cliente.getClientes();

        for (Cliente cli : clientes) {
            values.add(new String[] {cli.getId().toString(),cli.getNombre(),cli.getApellido(),cli.getMail(),cli.getTelefono().toString()});
        }

        TableModel tableModel = new DefaultTableModel(values.toArray(new Object[][] {}), columns.toArray());
        
        
    

}